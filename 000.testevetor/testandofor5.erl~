-module(testandofor5).

-compile(export_all).

-import(loop, [for/3, while/2]).

main(V_Args) ->
    st:new(),
    begin Var_n1 = 5, st:insert({"n", Var_n1}) end,
    begin Var_x1 = 0, st:insert({"x", Var_x1}) end,
    begin
      st:insert({"i", 0}),
      for(fun () -> st:get("i") =< st:get("n") end,
	  fun () -> st:insert({"i", st:get("i") + 1}) end,
	  fun () ->
		  Var_n2 = st:get("n"),
		  Var_i2 = st:get("i"),
		  Var_x2 = st:get("x"),
		  io:format("Estou contando e calculando dentro o "
			    "for :D "),
		  io:format("~p~n", [Var_i2]),
		  begin
		    Var_x3 = Var_x2 + Var_i2, st:insert({"x", Var_x3})
		  end,
		  io:format("~p~n", [Var_x3]),
		  st:insert({"n", Var_n2}),
		  st:insert({"i", Var_i2}),
		  st:insert({"x", Var_x3})
	  end),
      st:delete("i"),
      Var_n3 = st:get("n"),
      Var_x4 = st:get("x")
    end.
